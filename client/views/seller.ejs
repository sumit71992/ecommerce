<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
      integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="reset.css" />
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="seller.css" />
    <link rel="stylesheet" href="theme.css" />
    <title>Document</title>
  </head>

  <body>
    <%-include("header")-%>
    <div class="seller">
      <div class="dashboard">
        <h3>Categories</h3>
        <div class="category">
          <ul>
            <li><a href="#">Fruits</a></li>
            <li><a href="#">Vegitables</a></li>
            <li><a href="#">Dry Fruits</a></li>
            <li><a href="#">Kitchen</a></li>
          </ul>
        </div>
      </div>
      <div class="products">
        <div class="list">
          <h3>Products</h3>
          <button id="add" onclick="show()">Add Products</button>
        </div>
        <div class="form" id="form" style="display: none">
          <form action="/add" method="POST" enctype="multipart/form-data">
            <div class="item">
              <input type="text" name="name" placeholder="Enter Product Name" />
              <input
                type="number"
                name="quantity"
                placeholder="Enter Number of Products"
                style="margin-top: 0"
              />
              <input
                type="number"
                name="price"
                placeholder="Enter Price in Rs"
                style="margin-top: 0"
              />
              <select name="category" id="category" style="margin: 0.1rem 1rem 0.7rem 1rem; height: 2rem;">
                <option>Choose Category</option>
                <option value="fruits">fruits</option>
                <option value="vegetables">vegetables</option>
                <option value="dry">dry fruits</option>
                <option value="kitchen">kitchen</option>
              </select>
              <label for="des">Product Description:</label>
              <textarea name="des" id="des" cols="30" rows="10"></textarea>
              <input type="file" name="Image" />
              <button type="submit">Add Product</button>
            </div>
          </form>
        </div>
        <h4 id="no">No Products Uploaded Yet Please Upload !!!!!!</h4>
      </div>
    </div>
    <script>
      async function show() {
        const form = document.getElementById("form");
        const no = document.getElementById("no");
        if (form.style.display == "none") {
          form.style.display = "flex";
          no.style.display = "none";
        } else {
          form.style.display = "none";
          no.style.display = "block";
        }
      }
    </script>
  </body>
</html>
